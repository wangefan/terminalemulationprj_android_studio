<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyWidth="20%p"
    android:keyHeight="7%p">
    <Row android:keyWidth="17%p">
        <Key android:codes="-12" android:keyLabel="abc" android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="-13" android:keyLabel="!@#" android:isSticky="true" />
        <Key android:codes="-14" android:keyLabel="Func"/>
        <Key android:codes="-15" android:keyLabel="Server"/>
        <Key android:codes="-16" android:keyIcon="@drawable/sym_keyboard_done"/>
        <Key android:codes="-17" android:keyIcon="@drawable/sym_sys_keyboard_up" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:keyWidth="25%p">
        <Key android:codes="-42" android:keyLabel="PGUP" android:keyEdgeFlags="left"/>
        <Key android:codes="-43" android:keyLabel="PGDN"/>
        <Key android:codes="-44" android:keyLabel="Home" />
        <Key android:codes="-45" android:keyLabel="End" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:codes="-46" android:keyLabel="INS" android:keyEdgeFlags="left"/>
        <Key android:codes="-47" android:keyLabel="BS" />
        <Key android:codes="-48" android:keyLabel="DEL" />
        <Key android:codes="-49" android:keyLabel="ESC" />
        <Key android:codes="-50" android:keyLabel="LF" android:keyEdgeFlags="right"/>
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-51" android:keyLabel="Find" android:keyEdgeFlags="left"/>
        <Key android:codes="-52" android:keyLabel="SEL" />
        <Key android:codes="-53" android:keyLabel="RMV"/>
        <Key android:codes="-54" android:keyLabel="PScr"/>
        <Key android:codes="-55" android:keyLabel="NScr" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>