<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="9.1%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"  
    android:keyHeight="7%p">
    <Row android:keyWidth="17%p">
        <Key android:codes="-12" android:keyLabel="abc" android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="-13" android:keyLabel="!@#" android:isSticky="true" />
        <Key android:codes="-14" android:keyLabel="Func"/>
        <Key android:codes="-15" android:keyLabel="Server"/>
        <Key android:codes="-16" android:keyIcon="@drawable/sym_keyboard_done"/>
        <Key android:codes="-17" android:keyIcon="@drawable/sym_sys_keyboard_up" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:keyLabel="!" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="\@"/>
        <Key android:keyLabel="\#"/>
        <Key android:keyLabel="$"/>
        <Key android:keyLabel="%"/>
        <Key android:keyLabel="^"/>
        <Key android:keyLabel="&amp;"/>
        <Key android:keyLabel="*"/>
        <Key android:keyLabel="("/>
        <Key android:keyLabel=")"/>
        <Key android:keyLabel="+" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:keyLabel="~" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="_"/>
        <Key android:keyLabel="+"/>
        <Key android:keyLabel="{"/>
        <Key android:keyLabel="}"/>
        <Key android:keyLabel="|"/>
        <Key android:keyLabel=":"/>
        <Key android:keyLabel="&quot;"/>
        <Key android:keyLabel="&lt;"/>
        <Key android:keyLabel="&gt;"/>
        <Key android:keyLabel="\?" android:keyEdgeFlags="right"/>
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key android:keyLabel="`" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="-"/>
        <Key android:keyLabel="="/>
        <Key android:keyLabel="["/>
        <Key android:keyLabel="]"/>
        <Key android:keyLabel="\\"/>
        <Key android:keyLabel=";"/>
        <Key android:keyLabel="â€˜"/>
        <Key android:keyLabel=","/>
        <Key android:keyLabel="."/>
        <Key android:keyLabel="/" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>