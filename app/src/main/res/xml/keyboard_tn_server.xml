<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyWidth="17%p"
    android:keyHeight="7%p">
    <Row>
        <Key android:codes="-12" android:keyLabel="abc" android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="-13" android:keyLabel="!@#" android:isSticky="true" />
        <Key android:codes="-14" android:keyLabel="Func"/>
        <Key android:codes="-15" android:keyLabel="Server"/>
        <Key android:codes="-16" android:keyIcon="@drawable/sym_keyboard_done"/>
        <Key android:codes="-17" android:keyIcon="@drawable/sym_sys_keyboard_up" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:keyLabel="ATTN" android:codes="-18" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="BS" android:codes="-19"/>
        <Key android:keyLabel="PREV" android:codes="-20"/>
        <Key android:keyLabel="CLR" android:codes="-21"/>
        <Key android:keyLabel="EOF" android:codes="-22"/>
        <Key android:keyLabel="DEL" android:codes="-23" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:keyLabel="FMark" android:codes="-24" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="FExit" android:codes="-25"/>
        <Key android:keyLabel="BGN" android:codes="-26"/>
        <Key android:keyLabel="END" android:codes="-27"/>
        <Key android:keyLabel="DUP" android:codes="-28"/>
        <Key android:keyLabel="E I/P" android:codes="-29" android:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Key android:keyLabel="FLD+" android:codes="-30" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="FLD-" android:codes="-31"/>
        <Key android:keyLabel="Last" android:codes="-32"/>
        <Key android:keyLabel="Home" android:codes="-33"/>
        <Key android:keyLabel="INS" android:codes="-34"/>
        <Key android:keyLabel="NL"  android:codes="-35" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:rowEdgeFlags="bottom">
        <Key android:keyLabel="RST" android:codes="-36" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="RUP" android:codes="-37"/>
        <Key android:keyLabel="RDN" android:codes="-38"/>
        <Key android:keyLabel="SysRq" android:codes="-39"/>
        <Key android:keyLabel="Next " android:codes="-40"/>
        <Key android:keyLabel="REC" android:codes="-41" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>