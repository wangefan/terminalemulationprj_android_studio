<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory android:title="@string/host_profile" >
        
    <ListPreference
        android:key="host_type_key"
        android:title="@string/host_type"
        android:entries="@array/sertype_array"
        android:entryValues="@array/sertype_array"
        android:defaultValue="@string/IBM5250Val"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
            
    <EditTextPreference
            android:title="@string/pref_user_HostName"
            android:summary="@string/pref_user_HostName"
            android:key="prefHostname"/>
    
    <EditTextPreference
            android:title="@string/pref_header_ip"
            android:key="prefHostIp"/>
    
    
    <EditTextPreference
            android:title="@string/pref_header_port"
            android:key="prefHostPort"/>
    
     <CheckBoxPreference
        android:key="is_writelog"
        android:title="@string/pref_header_log"
        android:defaultValue="false" />
    
      <ListPreference
        android:key="general_cursor_type"
        android:title="@string/pref_cursor_type"
        android:entries="@array/pref_cousor_type_list"
        android:entryValues="@array/pref_cousor_type_list"
        android:defaultValue="Default"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
      
      <CheckBoxPreference
       
        android:key="is_cursortracking"
        android:title="@string/pref_Title_CursorTracking"
        android:defaultValue="true" />
      
      <CheckBoxPreference
       
        android:key="is_showmacro"
        android:title="@string/pref_Title_ShowMacro"
        android:defaultValue="false" />
    
       <Preference
            android:title="@string/pref_OpenReaderConfig"
            android:key="prefReaderconfig"
            
            />
       
    
    </PreferenceCategory>
     

</PreferenceScreen>
