<resources>
<!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
    </style>
    
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="SettingHeaderTextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/material_grey_600</item>
    </style>
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="PreferenceCategoryStyle">
        <item name="android:layout">@layout/settings_header</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>
    <style name="MyProgressDlg" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/material_grey_100</item>
        <item name="android:textColor">@color/material_grey_100</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
