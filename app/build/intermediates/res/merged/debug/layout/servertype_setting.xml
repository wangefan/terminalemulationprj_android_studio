<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sertype_seperator_height"
        android:background="@color/main_color_grey_300" />

    <LinearLayout
        android:id="@+id/id_server_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
    	android:background="?android:attr/selectableItemBackground"
        android:layout_marginStart="@dimen/serverTypeSettingLabelMargin"
        android:orientation="vertical" >

	    <TextView
	        android:id="@+id/id_servertype"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start"
	        
	        android:text="@string/str_serverType" />
	
	    <Spinner
	        android:id="@+id/serverType"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="start" />

	</LinearLayout>

    <TextView
        android:id="@+id/id_serverIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/serverTypeSettingLabelMargin"
        android:text="@string/str_ip" />
                
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/serverTypeSettingLabelMargin" >

        <EditText
            android:id="@+id/ip_1"
            android:labelFor="@id/ip_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_1"
            android:layout_toEndOf="@id/ip_1"
            android:singleLine="true"
            android:text="@string/dot"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_2"
            android:labelFor="@id/ip_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dot_1"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true" />

        <TextView
            android:id="@+id/dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_2"
            android:layout_toEndOf="@id/ip_2"
            android:singleLine="true"
            android:text="@string/dot"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dot_2"
            android:gravity="bottom"
            android:inputType="number"
            android:labelFor="@id/ip_3"
            android:maxLength="3"
            android:singleLine="true" />

        <TextView
            android:id="@+id/dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_3"
            android:layout_toEndOf="@id/ip_3"
            android:singleLine="true"
            android:text="@string/dot"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_4"
            android:labelFor="@id/ip_4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dot_3"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true" />
    </RelativeLayout>
	
	<LinearLayout
	    android:id="@+id/id_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
    	android:background="?android:attr/selectableItemBackground"
        android:layout_marginStart="@dimen/serverTypeSettingLabelMargin" >

        <TextView
            android:id="@+id/id_serverPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/str_serverPort" />

   		<EditText
   		    android:id="@+id/id_serverPortPicker"
   		    android:layout_width="50dp"
   		    android:layout_height="wrap_content"
   		    android:inputType="number"
   		    android:labelFor="@id/id_serverPortPicker"
   		    android:singleLine="true" />

    </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sertype_seperator_height"
        android:background="@color/main_color_grey_300" />
     <LinearLayout 
        android:id="@+id/id_networkAlive"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <CheckBox
		    android:id="@+id/networkAlive"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_ntKeepAlive" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_upperCase"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_upperCase"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_upperCase" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_network"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_network"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_network" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_autofullscreen"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_autofullscreen"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_autofullscreen" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/id_detectoutofrange"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_detectoutofrange"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_detectoutofrange" />
    </LinearLayout>
	<TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sertype_seperator_height"
        android:background="@color/main_color_grey_300" />
    <LinearLayout 
        android:id="@+id/id_autoconnect"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_autoconnect"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_autoconnect" />
    </LinearLayout>

	<LinearLayout 
	    android:id="@+id/id_autosignon"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_autosignon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_autosignon" />
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/id_autosignonname"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_marginStart="@dimen/serverTypeSettingLabelMargin">

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="start"
		    android:text="@string/str_signonName" />

		<EditText
		    android:id="@+id/id_signname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="start"
		    android:hint="@string/str_signonNameHint"
		    android:labelFor="@id/id_signname"
		    android:singleLine="true" />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/id_autosignonpwd"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
		android:layout_marginStart="@dimen/serverTypeSettingLabelMargin">

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="start"
		    android:text="@string/str_signonPwd" />

		<EditText
		    android:id="@+id/id_signpwd"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="start"
		    android:hint="@string/str_signonPwdHint"
		    android:labelFor="@id/id_signpwd"
		    android:singleLine="true" />

	</LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sertype_seperator_height"
        android:background="@color/main_color_grey_300" />
    <LinearLayout 
        android:id="@+id/id_gereratelog"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<CheckBox
		    android:id="@+id/ck_gereratelog"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_generateLog" />
    </LinearLayout>
</LinearLayout>
</ScrollView>